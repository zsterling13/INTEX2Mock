@{ ViewData["Title"] = "Create"; }

@model Microsoft.AspNetCore.Identity.IdentityRole

@* Admin can create a role after they are linked here from the create page *@

<h1>Create Role</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="CreateRole" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="RoleList">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}