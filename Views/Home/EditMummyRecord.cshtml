@model Mummy

<div>
    <h1>Edit a Mummy Record</h1>
    <br />
    <p>Enter in the information you would like to add for a new mummy record below.</p>
    <br />

    <!--Form where the user will enter in information to be run through the Add_Movie Action in the Home Controller-->
    <form asp-action="EditMummyRecord" method="post">
        <div>
            <label asp-for="Name">Name</label>
            <input asp-for="Name" value="@Model.Name"/>
        </div>
        <div>
            <label asp-for="Age">Age</label>
            <input asp-for="Age" value="@Model.Age"/>
        </div>
        <input type="hidden" asp-for="MummyID" value="@Model.MummyID" />

        <button class="btn btn-primary" type="submit">Edit Mummy Record</button>
    </form>

    <!--Show any errors here-->
    <div asp-validation-summary="All"></div>
</div>