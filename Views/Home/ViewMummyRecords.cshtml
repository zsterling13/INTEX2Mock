@model INTEX2Mock.Models.ViewModels.SeeMummiesViewModel

<div>
    <partial name="MummyFilterSummary" model="Model.mummySearchModel" />
</div>

<div class="text-center col-12">
    <div class="text-center">
        @* table heading *@
        <table class="center table table-striped table-bordered table-hover table-info">
            <thead>
                <tr>
                    <th>Mummy Id</th>
                    <th>Burial Location N/S</th>
                    <th>Low Pair N/S</th>
                    <th>Burial Location E/W</th>
                    <th>Low Pair E/W</th>
                    <th>Area</th>
                    <th>Length of Remains</th>
                    <th>Hair Color</th>
                    <th>Year Of Excavation</th>
                </tr>
            </thead>

            <tbody>
                <!--Loops through all of the records and prints the mummies out.-->
                <!--Information to loop through is located in a seperate .cshtml file-->
                @foreach (var x in Model.Mummies)
                {
                    <partial name="MummyRecordListSummary" model="x" />
                }
            </tbody>
        </table>
    </div>

    <div page-info="@Model.PageNumberingInfo" page-action="ViewMummyRecords" page-classes-enabled="true" page-class="btn"
         page-class-normal="btn-outline-dark"
         page-class-selected="btn-dark"
         page-parameters="@Model.UrlInfo"
         class="text-center">
    </div>
</div>